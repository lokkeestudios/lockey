  <div class="py-5 bg-neutrals-800/90 backdrop-blur">
    <div class="mx-auto w-10/12 2xl:w-[80%] h-full">
      <div class="flex justify-between">
        <a class="flex items-center" href="/">
          <img
            class="w-24 md:w-28"
            src="/assets/lockey-logo.svg"
            alt="Lockey logo"
            height={512}
            width={2203}
          />
        </a>
        <div class="flex gap-2">
          <a
            href={site.githubURL}
            rel="noreferrer"
            target="_blank"
            title="Github Page"
            class="flex items-center justify-center"
          >
