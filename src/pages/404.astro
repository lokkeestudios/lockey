---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page not found | LOKKEE STUDIOS">
  <main>
    <section
      class="min-h-screen w-full flex py-20 items-center"
      aria-label="Page not found"
    >
      <div class="mx-auto w-10/12 2xl:w-[80%] h-full">
        <div class="flex items-center text-center flex-col z-10 relative">
          <div
            class="
         font-display font-bold text-[12rem] lg:text-[16rem] relative inline-block before:left-0.5 before:glitch-1-clip before:animate-glitch-1 before:content-['404'] before:absolute before:top-0 before:w-full before:h-full before:bg-neutrals-800 after:-left-0.5 after:glitch-2-clip after:animate-glitch-2 after:content-['404'] after:absolute after:top-0 after:w-full after:h-full after:bg-neutrals-800"
          >
            404
          </div>
          <h2
            class="font-display font-bold text-brand md:text-xl uppercase mb-4"
          >
            Page not found
          </h2>
          <h3
            class="font-display font-bold text-4xl md:text-5xl mb-8 leading-tight md:leading-tight"
          >
            Whoops! Nothing here...
          </h3>
          <p class="text-neutrals-50 leading-relaxed max-w-prose mb-4">
            Let's rewind in time and get you...
          </p>
          <a
            class="text-lg text-neutrals-50 group inline-block items-center box-border border-b-[1px] border-b-neutrals-50 hover:border-transparent hover:text-brand transition-all duration-300"
            href="/"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              class="inline h-5 w-5 transition-all mb-[0.2rem] group-hover:opacity-100 opacity-0 duration-300 -ml-5 group-hover:ml-0"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>back home
          </a>
        </div>
        <img
          src="/assets/page-not-found.svg"
          alt="Page not found"
          class="absolute w-full left-0 top-1/2 -translate-y-1/2 opacity-60"
          width={1172}
          height={500}
        />
      </div>
    </section>
  </main>
</BaseLayout>
